<div class="edit-container">
  <div class="form-card">
    <header class="show-header">
      <h1 class="staff-name-display"><%= @staff.name %></h1>
      <p class="staff-dept-display">
        DEPARTMENT OF <%= @staff.department&.name&.upcase || "ASSIGNMENT PENDING" %>
      </p>
    </header>

    <hr class="show-divider">

    <div class="show-body">
      <div class="info-row">
        <span class="info-label">Email Address</span>
        <span class="info-value"><%= @staff.email %></span>
      </div>
      
      <div class="info-row">
        <span class="info-label">Annual Salary</span>
        <span class="info-value">â‚±<%= number_with_delimiter(number_with_precision(@staff.monthly_salary * 12, precision: 0)) %></span>
      </div>

      <div class="info-row">
        <span class="info-label">Employment Status</span>
        <span class="info-value">
          <span class="status-badge"><%= @staff.status.upcase %></span>
        </span>
      </div>
    </div>

    <div class="show-footer-actions">
      <%= link_to "Edit Staff", edit_staff_path(@staff), class: "btn-update" %>
      <%= link_to "Back to Directory", staffs_path, class: "btn-cancel" %>
      <%= button_to "Delete Staff", @staff, method: :delete, 
          form: { style: 'display:inline-block;' },
          class: "btn-delete-text", 
          data: { turbo_confirm: "Are you sure?" } %>
    </div>
  </div>
</div>