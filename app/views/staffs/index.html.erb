<div class="staff-index-wrapper">
  <div class="n-wrapper">
    <div class="index-header-container">
      <h1 class="staff-index-title">Staffs</h1>
      <div class="title-underline"></div>
    </div>

    <div class="n-card">
      <div class="d-flex justify-content-end mb-4">
        <%= link_to "New Staff", new_staff_path, class: "btn-n btn-mint" %>
      </div>

      <table class="n-table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Monthly Salary</th>
            <th>Status</th>
            <th>Department</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @staffs.each do |staff| %>
            <tr>
              <td class="fw-bold"><%= staff.name %></td>
              <td><%= staff.email %></td>
              <td>â‚±<%= number_with_delimiter(number_with_precision(staff.monthly_salary, precision: 2)) %></td>
              <td><%= staff.status %></td>
              <td><%= staff.department&.name %></td>
              <td>
                <div class="actions-cell">
                  <%= link_to "Show", staff, class: "btn-n btn-sky" %>
                  <%= link_to "Edit", edit_staff_path(staff), class: "btn-n btn-peach" %>
                  <%= button_to "Delete", staff, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn-n btn-pink" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>