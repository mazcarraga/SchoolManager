<div class="form-card">
  <div class="card-header-solid">
    <h2><%= subject.new_record? ? "Add Subject" : "Update Subject" %></h2>
  </div>

  <%= form_with(model: subject, local: true) do |form| %>
    <div class="mb-4">
      <%= form.label :name, class: "label" %>
      <%= form.text_field :name, class: "form-control", placeholder: "e.g. Purposive Communication" %>
    </div>

    <div class="mb-4">
      <%= form.label :teacher_id, class: "label" %>
      <%= form.collection_select :teacher_id, Teacher.all, :id, :name, { prompt: "Select a teacher" }, class: "form-select" %>
    </div>

    <div class="mb-4">
      <%= form.label :department_id, class: "label" %>
      <%= form.collection_select :department_id, Department.all, :id, :name, { prompt: "Select a department" }, class: "form-select" %>
    </div>

    <div class="mb-4">
      <%= form.label :number_of_units, class: "label" %>
      <%= form.text_field :number_of_units, class: "form-control", placeholder: "e.g. 3" %>
    </div>

    <div class="text-end">
      <%= form.submit subject.new_record? ? "Save Subject" : "Update Subject", class: "btn-n btn-mint" %>
    </div>
  <% end %>
</div>