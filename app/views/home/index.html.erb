<script>
const sections = document.querySelectorAll('.page-section');


window.addEventListener('scroll', () => {
 const scrollTop = window.scrollY;
 const windowHeight = window.innerHeight;


 sections.forEach(section => {
   const sectionTop = section.offsetTop;
   const sectionHeight = section.offsetHeight;


   // Calculate visibility ratio (0 = not visible, 1 = fully visible)
   let ratio = (scrollTop + windowHeight - sectionTop) / sectionHeight;
   ratio = Math.max(0, Math.min(1, ratio)); // clamp between 0-1


   // Apply fade and subtle upward movement
   section.style.opacity = ratio;
   section.style.transform = `translateY(${(1 - ratio) * 50}px)`;
 });
});
function togglePrograms(element) {
 const grid = element.querySelector('.program-grid-container');
 const isAlreadyOpen = grid.style.display === "block";


 // Close all other colleges first
 document.querySelectorAll('.program-grid-container').forEach(container => {
   container.style.display = "none";
 });
 document.querySelectorAll('.college-item').forEach(item => {
   item.classList.remove('active');
 });


 // Toggle the clicked one
 if (!isAlreadyOpen) {
   grid.style.display = "block";
   element.classList.add('active');
 }
}
// Optional: fade in on page load
window.addEventListener('load', () => {
 document.body.classList.remove('fade-in');
});
</script>
