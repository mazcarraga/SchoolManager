<script>
document.addEventListener('DOMContentLoaded', function() {
 const newsBtn = document.getElementById('newsBtn');
 const eventsBtn = document.getElementById('eventsBtn');
 const moreBtn = document.getElementById('moreBtn');


 const newsCards = document.querySelectorAll('.category-news');
 const eventsCards = document.querySelectorAll('.category-events');


 let currentCategory = 'news';


 function showCategory(category) {
   currentCategory = category;


   if(category === 'news') {
     newsCards.forEach((c,i) => c.classList.toggle('d-none', i >= 3));
     eventsCards.forEach(c => c.classList.add('d-none'));
     newsBtn.classList.add('active');
     eventsBtn.classList.remove('active');
   } else {
     eventsCards.forEach((c,i) => c.classList.toggle('d-none', i >= 3));
     newsCards.forEach(c => c.classList.add('d-none'));
     eventsBtn.classList.add('active');
     newsBtn.classList.remove('active');
   }
 }


 function showMore(e) {
   e.preventDefault();
   if(currentCategory === 'news') {
     newsCards.forEach(c => c.classList.remove('d-none'));
   } else {
     eventsCards.forEach(c => c.classList.remove('d-none'));
   }
 }


 newsBtn.addEventListener('click', () => showCategory('news'));
 eventsBtn.addEventListener('click', () => showCategory('events'));
 moreBtn.addEventListener('click', showMore);

 const learnMoreBtn = document.getElementById('learnMoreBtn');
 if (learnMoreBtn) {
   learnMoreBtn.addEventListener('click', function(e) {
     e.preventDefault();
     document.getElementById('aboutSection').scrollIntoView({ behavior: 'smooth' });
   });
 }

 showCategory('news');
});
</script>


