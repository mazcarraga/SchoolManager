<style>
  :root {
    --cv-red: #8d212d;
    --cv-cream: #f9f4eb;
    --cv-text: #333333;
    --cv-white: #ffffff;
  }

  body, html {
    height: 100%;
    margin: 0;
    font-family: 'Playfair Display', serif;
    overflow-x: hidden;
  }

  .cv-full-page {
    display: flex;
    min-height: 100vh;
    width: 100vw;
  }

  .cv-sidebar {
    background-color: var(--cv-red);
    color: var(--cv-white);
    width: 38%;
    padding: 80px 60px;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    position: relative;
  }

  .cv-main-content {
    background-color: var(--cv-cream);
    width: 62%;
    padding: 100px 80px;
    color: var(--cv-text);
  }

  .cv-indicator {
    text-transform: uppercase;
    letter-spacing: 4px;
    font-size: 0.85rem;
    opacity: 0.7;
    margin-bottom: 10px;
    display: block;
  }

  .cv-photo-large {
    width: 280px;
    height: 280px;
    border-radius: 50%;
    border: 10px solid rgba(255,255,255,0.1);
    object-fit: cover;
    margin-bottom: 40px;
    transition: transform 0.3s ease;
  }

  .cv-photo-large:hover {
    transform: scale(1.02);
  }

  .name-display {
    font-size: 3.8rem;
    font-weight: 900;
    line-height: 1;
    text-transform: uppercase;
    margin-bottom: 15px;
  }

  .cv-nav-links {
    margin-top: auto;
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .btn-nav {
    color: var(--cv-white);
    text-decoration: none;
    font-size: 0.9rem;
    letter-spacing: 2px;
    border: 1px solid rgba(255,255,255,0.3);
    padding: 12px;
    transition: 0.3s ease;
    text-transform: uppercase;
  }

  .btn-nav:hover {
    background: var(--cv-white);
    color: var(--cv-red);
  }

  .cv-section-title {
    color: var(--cv-red);
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: 3px;
    border-bottom: 2px solid var(--cv-red);
    margin-bottom: 40px;
    display: block;
    font-size: 1.4rem;
  }

  .sidebar-header {
    border-bottom: 1px solid rgba(255,255,255,0.2);
    padding-bottom: 8px;
    margin-bottom: 20px;
    margin-top: 50px;
    text-transform: uppercase;
    font-size: 1rem;
    letter-spacing: 2px;
    width: 100%;
    text-align: left;
  }

  .contact-item {
    text-align: left;
    width: 100%;
    font-size: 0.95rem;
    margin-bottom: 12px;
  }

  .experience-item {
    margin-bottom: 50px;
  }

  .exp-meta {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    margin-bottom: 10px;
  }

  .date-text {
    color: var(--cv-red);
    font-weight: bold;
    font-size: 1.1rem;
  }

  @media (max-width: 1100px) {
    .cv-full-page { flex-direction: column; }
    .cv-sidebar, .cv-main-content { width: 100%; }
    .cv-photo-large { width: 220px; height: 220px; }
    .name-display { font-size: 2.8rem; }
  }
</style>

<div class="cv-full-page">
  <aside class="cv-sidebar">
    <span class="cv-indicator">Curriculum Vitae</span>
    
    <div class="my-4">
      <%= image_tag "willah1.png", class: "cv-photo-large shadow", alt: "Ma. Willah Ederlyn M. Saturius" %>
