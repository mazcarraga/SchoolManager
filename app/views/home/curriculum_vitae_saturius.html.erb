<style>
  .icon-btn { display: inline-flex; align-items: center; gap: 8px; }
  .icon-btn i { font-size: 1rem; line-height: 1; }
  .sr-only {
   position: absolute !important;
   width: 1px; height: 1px;
   padding: 0; margin: -1px; overflow: hidden; clip: rect(0,0,0,0);
   white-space: nowrap; border: 0;
   }
  .cv-content { color: #222; } /* ensure strong contrast on white card background */

  .cv-hero-section { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 48px 20px; text-align: center; margin-bottom: 32px; }
  .cv-hero-content h1 { font-size: 2.2em; margin-bottom: 6px; color: #fff; }
  .cv-name { color: #fff; font-weight: 600; margin-bottom: 2px; }
  .cv-role { color: rgba(255,255,255,0.95); margin-bottom: 12px; }

  .back-button { display:inline-block; padding: 8px 14px; background: rgba(255,255,255,0.15); color: white; text-decoration: none; border-radius: 6px; border: 1px solid rgba(255,255,255,0.18); transition: all .22s ease; }
  .back-button:hover { transform: translateX(-4px); box-shadow: 0 6px 18px rgba(0,0,0,0.12); }

  .cv-container { display: grid; grid-template-columns: 1fr 300px; gap: 24px; max-width: 1100px; margin: 0 auto; padding: 0 18px 48px; }
  .cv-content { background: #fff; border-radius: 8px; padding: 32px; box-shadow: 0 6px 18px rgba(0,0,0,0.06); }

  .cv-section { margin-bottom: 28px; }
  .cv-section-title { font-size: 1.25rem; color: var(--purple-dark); border-bottom: 2px solid rgba(102,126,234,0.12); padding-bottom: 8px; margin-bottom: 14px; }

  .cv-header { display:flex; gap: 20px; align-items: center; border-bottom: 1px solid #f0f0f0; padding-bottom: 20px; margin-bottom: 20px; }
  .cv-photo-img { width: 140px; height: 140px; object-fit: cover; border-radius: 8px; box-shadow: 0 6px 20px rgba(0,0,0,0.08); transition: transform .25s ease, box-shadow .25s ease; }
  .cv-photo-img:hover { transform: scale(1.03); box-shadow: 0 10px 30px rgba(0,0,0,0.12); }

  .cv-header-info h2 { margin: 0 0 6px 0; color: var(--purple-dark); font-size: 1.5rem; }
  .cv-title { color: var(--purple-mid); margin-bottom: 8px; font-weight: 600; }
  .cv-email a { color: var(--purple-dark); text-decoration: none; }
  .cv-email a:hover { text-decoration: underline; color: var(--purple-mid); }

  .cv-skills { display: grid; grid-template-columns: repeat(auto-fit,minmax(180px,1fr)); gap: 12px; }
  .cv-skill-item { background:#f7f8fb; padding:12px; border-radius:6px; border-left: 4px solid var(--purple-mid); transition: transform .22s ease, box-shadow .22s ease; }
  .cv-skill-item:hover { transform: translateY(-3px); box-shadow: 0 8px 20px rgba(111, 66, 193, 0.08); }

  .accordion { display:flex; flex-direction: column; gap: 8px; }
  .accordion-item { border: 1px solid #e6e6e9; border-radius:6px; overflow:hidden; background: #fff; }
  .accordion-header { width:100%; padding: 14px 16px; background: #fbfbfd; border: none; display:flex; justify-content:space-between; align-items:center; cursor:pointer; font-weight:600; color:#222; transition: background .18s ease, transform .18s ease; }
  .accordion-header:hover { background: #f3f4fb; transform: translateX(4px); color: var(--purple-mid); }
  .chevron-icon { transition: transform .25s ease; }
  .accordion-content { max-height: 0; overflow:hidden; transition: max-height .28s ease, padding .2s ease; }
  .accordion-item.active .accordion-content { max-height: 400px; padding: 14px 16px; border-top: 1px solid #eee; }
  .accordion-item.active .chevron-icon { transform: rotate(180deg); }

  .cv-institution, .cv-company { color: var(--purple-dark); font-style: italic; font-weight: 600; margin-bottom: 6px; }
  .cv-year { color: #888; font-size: .92rem; margin-bottom: 8px; }
  .cv-description { color: #333; line-height: 1.6; }

  .cv-sidebar-box { padding: 16px; border-radius: 8px; background: #fff; box-shadow: 0 6px 18px rgba(0,0,0,0.06); }
  .sidebar-link { color: var(--purple-dark); text-decoration: none; transition: transform .18s ease; display:inline-block; }
  .sidebar-link:hover { transform: translateX(6px); color: var(--purple-mid); text-decoration: underline; }

  @media (max-width: 860px) {
    .cv-container { grid-template-columns: 1fr; padding: 0 14px 36px; }
    .cv-header { flex-direction: column; align-items: center; text-align: center; }
  }
</style>

<script>
  document.querySelectorAll('.accordion').forEach(accordion => {
    accordion.querySelectorAll('.accordion-header').forEach(header => {
      header.addEventListener('click', () => {
        const item = header.closest('.accordion-item');
        const isActive = item.classList.contains('active');

        // Close ALL items inside this accordion
        accordion.querySelectorAll('.accordion-item').forEach(i => {
          i.classList.remove('active');
        });

        // Only open the clicked one if it was not already active
        if (!isActive) {
          item.classList.add('active');
        }
      });
    });
  });
</script>
