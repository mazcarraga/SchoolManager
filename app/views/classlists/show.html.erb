<div class="n-wrapper">
  <div class="n-card">
    <div class="n-card-header fw-semibold text-dark">
      <div style="display:flex; justify-content:space-between; align-items:center;">
        <h2 class="classlist-title">Classlist Details</h2>
        <%= link_to "Edit Classlist", edit_classlist_path(@classlist), class: "btn-n btn-peach" %>
      </div>

      <div class="n-meta text-muted" style="font-size:0.9rem; margin-bottom:12px;">
        Student: <%= @classlist.student.name %> &nbsp;|&nbsp;
        Section: <%= @classlist.section.name %>
      </div>
    </div>
  </div>

  <div class="show-actions" style="display:flex; justify-content:space-between; margin-top:18px;">
    <%= link_to "â† Back to Classlists", classlists_path, class: "btn-n btn-grey" %>
    <%= button_to "Delete Classlist", @classlist,
        method: :delete,
        data: { confirm: "Are you sure you want to delete this classlist?" },
        class: "btn-n btn-pink" %>
  </div>
</div>
