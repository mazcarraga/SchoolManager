<div class="n-wrapper">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="card-header-solid m-0">CLASSLISTS</h1>
    <%= link_to "New Classlist", new_classlist_path, class: "btn-n btn-mint" %>
  </div>

    <table class="n-table">
      <thead>
        <tr>
          <th>STUDENT</th>
          <th>SECTION</th>
          <th>ACTIONS</th>
        </tr>
      </thead>

      <tbody>
        <% @classlists.each do |classlist| %>
          <tr>
            <td><strong><%= classlist.student.name %></td>
            <td><%= classlist.section.name %></td>
            <td class="d-flex gap-2 justify-content-center">
              <%= link_to "View", classlist, class: "btn-n btn-sky", onclick: "event.stopPropagation();" %>
              <%= link_to "Edit", edit_classlist_path(classlist), class: "btn-n btn-peach", onclick: "event.stopPropagation();" %>
              <%= button_to "Delete", classlist,
                    method: :delete,
                    form: { onsubmit: "event.stopPropagation();" },
                    data: { confirm: "Are you sure?" },
                    class: "btn-n btn-pink" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>