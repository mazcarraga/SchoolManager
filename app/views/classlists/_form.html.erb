<%= form_with(model: classlist, local: true, class: "n-form") do |form| %>
  <% if classlist.errors.any? %>
    <div class="n-error">
      <h4><%= pluralize(classlist.errors.count, "error") %> prevented this classlist from being saved:</h4>
      <ul>
        <% classlist.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="n-field">
    <%= form.label :student_id, "Student", class: "fw-semibold" %>
    <%= form.collection_select :student_id, Student.all, :id, :name, prompt: "Select a Student", class: "n-input" %>
  </div>

  <div class="n-field">
    <%= form.label :section_id, "Section", class: "fw-semibold" %>
    <%= form.collection_select :section_id, Section.all, :id, :name, prompt: "Select a Section", class: "n-input" %>
  </div>

  <div class="n-field mt-3">
    <%= form.submit classlist.persisted? ? "Update Classlist" : "Create Classlist", class: "btn-n btn-mint" %>
  </div>
<% end %>
