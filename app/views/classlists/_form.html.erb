<div class="form-card">
  <div class="card-header-solid">
    <h2><%= classlist.new_record? ? "Add Classlist" : "Update Classlist" %></h2>
  </div>

  <%= form_with(model: classlist, local: true) do |form| %>
    <div class="mb-4">
      <%= form.label :student_id, class: "label" %>
      <%= form.collection_select :student_id, Student.all, :id, :name, { prompt: "Select a student" }, class: "form-select" %>
    </div>

    <div class="mb-4">
      <%= form.label :section_id, class: "label" %>
      <%= form.collection_select :section_id, Section.all, :id, :name, { prompt: "Select a section" }, class: "form-select" %>
    </div>

    <div class="text-end">
      <%= form.submit classlist.new_record? ? "Save Classlist" : "Update Classlist", class: "btn-n btn-mint" %>
    </div>
  <% end %>
</div>