<div class="n-wrapper">
  <div class="n-card">
    <div class="n-card-header fw-semibold text-dark">
      <div style="display:flex; justify-content:space-between; align-items:center;">
        <h2 class="section-title"><%= @section.name %></h2>
        <%= link_to "Edit Section", edit_section_path(@section), class: "btn-n btn-peach" %>
      </div>

      <div class="n-meta text-muted" style="font-size:0.9rem; margin-bottom:12px;">
        Subject: <%= @section.subject.name %> &nbsp;|&nbsp;
        Room: <%= @section.room %> &nbsp;|&nbsp;
        Time Slot: <%= @section.time_slot %>
      </div>
    </div>

    <div class="n-card-body">
      <h4 class="fw-semibold mb-3 bi bi-people-fill" style="color:#333;"> STUDENTS</h4>

      <table class="n-subject-table">
        <thead>
          <tr>
            <th>STUDENT NAME</th>
            <th>PROGRAM</th>
            <th>YEAR LEVEL</th>
          </tr>
        </thead>

        <tbody>
          <% @section.classlists.each do |classlist| %>
            <tr>
              <td><%= classlist.student.name %></td>
              <td><%= classlist.student.program %></td>
              <td><%= classlist.student.year_level %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="show-actions" style="display:flex; justify-content:space-between; margin-top:18px;">
    <%= link_to "â† Back to Sections", sections_path, class: "btn-n btn-grey" %>
    <%= button_to "Delete Section", @section,
        method: :delete,
        data: { confirm: "Are you sure you want to delete this section?" },
        class: "btn-n btn-pink" %>
  </div>
</div>
