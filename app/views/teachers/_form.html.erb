<div class="form-card">
  <div class="card-header-solid">
    <h2><%= teacher.new_record? ? "Add Teacher" : "Update Teachers" %></h2>
  </div>

  <%= form_with(model: teacher, local: true) do |form| %>
    <div class="mb-4">
      <%= form.label :name, class: "label" %>
      <%= form.text_field :name, class: "form-control", placeholder: "e.g. Jane Doe" %>
    </div>

    <div class="mb-4">
      <%= form.label :email, class: "label" %>
      <%= form.text_field :email, class: "form-control", placeholder: "e.g. jdoe@gbox.adnu.edu.ph" %>
    </div>

    <div class="mb-4">
      <%= form.label :department_id, class: "label" %>
      <%= form.collection_select :department_id, Department.all, :id, :name, { prompt: "Select a department" }, class: "form-select" %>
    </div>

    <div class="mb-4">
      <%= form.label :specialization, class: "label" %>
      <%= form.text_field :specialization, class: "form-control", placeholder: "e.g. Software Development" %>
    </div>

    <div class="mb-4">
      <%= form.label :status, class: "label" %>
      <%= form.text_field :status, class: "form-control", placeholder: "e.g. Active" %>
    </div>

    <div class="text-end">
      <%= form.submit teacher.new_record? ? "Save Teacher" : "Update Teacher", class: "btn-n btn-mint" %>
    </div>
  <% end %>
</div>