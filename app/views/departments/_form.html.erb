<div class="form-card">
  <div class="card-header-solid">
    <h2><%= department.new_record? ? "Create Department" : "Update Department" %></h2>
  </div>

  <%= form_with(model: department, local: true) do |form| %>
    <div class="mb-4">
      <%= form.label :name, class: "label" %>
      <%= form.text_field :name, class: "form-control", placeholder: "e.g. Computer Engineering" %>
    </div>

    <div class="mb-4">
      <%= form.label :location, class: "label" %>
      <%= form.text_field :location, class: "form-control", placeholder: "e.g. Main Campus, 3rd Floor" %>
    </div>

    <div class="text-end">
      <%= form.submit department.new_record? ? "Save Department" : "Update Department", class: "btn-n btn-mint" %>
    </div>
  <% end %>
</div>