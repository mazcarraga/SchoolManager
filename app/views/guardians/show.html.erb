<div class="staff-show-wrapper">
  <div class="n-wrapper">
    <div class="n-card">
      <div class="show-header">
        <h1 class="profile-name"><%= @guardian.name %></h1>
        <p class="profile-subtitle">GUARDIAN RECORD</p>
      </div>

      <div class="profile-details">
        <div class="detail-row">
          <span class="detail-label">Email Address</span>
          <span class="detail-value"><%= @guardian.email_address.presence || "N/A" %></span>
        </div>

        <div class="detail-row">
          <span class="detail-label">Contact Number</span>
          <span class="detail-value"><%= @guardian.contact_number.presence || "No Contact Info" %></span>
        </div>

        <div class="student-list-section">
          <h3 class="section-title">Associated Students</h3>
          <table class="n-table">
            <thead>
              <tr>
                <th>Student Name</th>
                <th>Relationship</th>
              </tr>
            </thead>
            <tbody>
              <% @guardian.relationships.each do |relationship| %>
                <tr>
                  <td class="fw-bold"><%= relationship.student.name %></td>
                  <td><%= relationship.relation %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

      <div class="show-footer-actions">
        <%= link_to "Edit Guardian", edit_guardian_path(@guardian), class: "btn-n btn-mint" %>
        <%= link_to "Back to Directory", guardians_path, class: "btn-n btn-outline" %>
        <%= button_to "Delete Guardian", @guardian, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn-n btn-pink-outline" %>
      </div>
    </div>
  </div>
</div>