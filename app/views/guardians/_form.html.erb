<div class="edit-container">
  <header class="page-header">
    <h1><%= guardian.new_record? ? "NEW GUARDIAN MEMBER" : "EDIT GUARDIAN MEMBER" %></h1>
    <p><%= guardian.new_record? ? "Personnel Registration" : "Update Personnel Record" %></p>
  </header>

  <div class="form-card">
    <h2 class="form-title"><%= guardian.new_record? ? "ADDING NEW GUARDIAN" : "EDITING GUARDIAN RECORD" %></h2>
    
    <%= form_with(model: guardian, local: true) do |f| %>
      <% if guardian.errors.any? %>
        <div class="alert alert-danger">
          <ul>
            <% guardian.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :name, "Full Name" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :email_address, "Email Address" %>
        <%= f.email_field :email_address, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :contact_number, "Contact Number" %>
        <%= f.text_field :contact_number, class: "form-control" %>
      </div>

      <div class="form-actions">
        <%= f.submit guardian.new_record? ? "Create Guardian" : "Update Guardian Member", class: "btn-update" %>
        <%= link_to "Cancel", guardians_path, class: "btn-cancel" %>
      </div>
    <% end %>
  </div>
</div>