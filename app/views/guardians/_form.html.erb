<div class="n-wrapper">
  <div class="student-card">
    <div class="card-header-solid">
      <h2 class="mb-0"><%= guardian.new_record? ? "ADDING NEW GUARDIAN" : "EDITING GUARDIAN" %></h2>
    </div>

    <div class="card-body">
      <%= form_with(model: guardian, local: true) do |f| %>

        <% if guardian.errors.any? %>
          <div class="alert alert-danger">
            <h5><%= pluralize(guardian.errors.count, "error") %> prohibited this guardian from being saved:</h5>
            <ul>
              <% guardian.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.label :name, "Name", style: "text-align: left; display: block; margin-top: 8px; margin-bottom: 8px;" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :email_address, "Email Address", style: "text-align: left; display: block; margin-top: 8px; margin-bottom: 8px;" %>
          <%= f.email_field :email_address, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :contact_number, "Contact Number", style: "text-align: left; display: block; margin-top: 8px; margin-bottom: 8px;" %>
          <%= f.text_field :contact_number, class: "form-control" %>
        </div>

        <div class="actions" style="margin-top: 20px;">
          <%= f.submit class: "btn-n btn-mint" %>
        </div>

      <% end %>
    </div>
  </div>
</div>
