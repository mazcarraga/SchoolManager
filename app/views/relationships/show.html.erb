<div class="n-wrapper">

  <div class="n-card">

    <div class="n-card-header fw-semibold text-dark">
      <div style="display:flex; justify-content:space-between; align-items:center;">
        <h2 class="staff-title"><%= @relationship.student.name %> – <%= @relationship.guardian.name %></h2>
        <%= link_to "Edit Relationship", edit_relationship_path(@relationship), class: "btn-n btn-peach" %>
      </div>

      <div class="n-meta text-muted" style="font-size:0.9rem; margin-bottom:12px;">
        Relationship Info
      </div>
    </div>

    <div class="n-card-body">
      <div style="display:flex; gap:24px; align-items:flex-start;">
        <div style="flex:1; padding-right:12px;">
          <p style="margin:0 0 12px;"><strong>Student:</strong> <%= @relationship.student.name %></p>
          <p style="margin:0 0 12px;"><strong>Guardian:</strong> <%= @relationship.guardian.name %></p>
          <p style="margin:0;"><strong>Relation:</strong> <%= @relationship.relation %></p>
        </div>
      </div>
    </div>

  </div>

  <div class="show-actions" style="display:flex; justify-content:space-between; margin-top:18px;">
    <%= link_to "← Back to Relationships", relationships_path, class: "btn-n btn-grey" %>
    <%= button_to "Delete", @relationship,
        method: :delete,
        data: { confirm: "Are you sure you want to delete this relationship?" },
        class: "btn-n btn-pink" %>
  </div>

</div>
