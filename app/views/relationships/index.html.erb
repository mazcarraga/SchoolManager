<h1 class="text-center bi bi-people-fill"> STUDENT-GUARDIAN RELATIONSHIPS </h1>

<div class="n-wrapper">
  <div class="n-card">
    <div class="text-end mb-3">
      <%= link_to " New Relationship", new_relationship_path, class: "bi bi-person-add btn-n btn-mint btn-new" %>
    </div>

    <!-- âœ… Inline CSS for button alignment -->
    <style>
      .actions-cell {
        display: flex;
        gap: 8px; 
        justify-content: center; 
        align-items: center;
      }

      .actions-cell .btn-n {
        margin: 0;
        display: inline-flex;
        align-items: center;
        justify-content: center;
      }
    </style>

    <table class="n-table">
      <thead>
        <tr>
          <th>STUDENT</th>
          <th>GUARDIAN</th>
          <th>RELATIONSHIP</th>
          <th>ACTIONS</th>
        </tr>
      </thead>

      <tbody>
        <% @relationships.each do |relationship| %>
          <tr>
            <td><%= relationship.student.name %></td>
            <td><%= relationship.guardian.name %></td>
            <td><%= relationship.relation %></td>
            <td class="actions-cell">
              <%= link_to "Show", relationship, class: "btn-n btn-sky" %>
              <%= link_to "Edit", edit_relationship_path(relationship), class: "btn-n btn-peach" %>
              <%= link_to "Delete", relationship, class: "btn-n btn-pink", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
